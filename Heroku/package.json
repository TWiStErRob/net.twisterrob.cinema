{
	"name": "twisterrob-cinema-heroku",
	"version": "1.0.0",
	"author": "Robert Papp <papp.robert.s@gmail.com>",
	"contributors": [
		{
			"name": "Robert Papp",
			"email": "papp.robert.s@gmail.com"
		}
	],
	"description": "Heroku deployment for twisterrob-cinema",
	"readmeFilename": "README.md",
	"license": "UNLICENCED",
	"repository": "local",
	"engines": {
		"node": "6.10.1",
		"npm": "5.5.1"
	},
	"scripts": {
		"start": "(cd backend && npm start && cd ..)",
		"updateFromCineworld": "npm run updateFromCineworldCinemas && npm run updateFromCineworldFilms",
		"updateFromCineworldCinemas": "node backend/src/main/javascript/updateFromCineworldCinemas",
		"updateFromCineworldFilms": "node backend/src/main/javascript/updateFromCineworldFilms",
		"heroku-postbuild": "cd frontend && npm run build",
		"test": "(cd backend && npm test && cd ..) && (cd frontend && npm test && cd ..) && (cd test && npm test && cd ..)",
		"install": "(cd backend && npm install && cd ..) && (cd frontend && npm install && cd ..)",
		"update": "(cd backend && npm update && cd ..) && (cd frontend && npm update && cd ..)",
		"devTest": "npm-run-all --race --parallel devTest:selenium devTest:frontend devTest:backend",
		"devTest:selenium": "(cd test && npm run selenium && cd..)",
		"devTest:frontend": "(cd frontend && npm start && cd ..)",
		"devTest:backend": "(cd backend && npm start && cd ..)"
	},
	"devDependencies": {
		"npm-run-all": "4.1.1"
	}
}
