{
	"name": "twisterrob-cinema-heroku",
	"version": "1.0.0",
	"author": "Robert Papp <papp.robert.s@gmail.com>",
	"contributors": [
		{
			"name": "Robert Papp",
			"email": "papp.robert.s@gmail.com"
		}
	],
	"description": "Heroku deployment for twisterrob-cinema",
	"readmeFilename": "README.md",
	"license": "UNLICENCED",
	"repository": "local",
	"engines": {
		"node": "8.8.1",
		"npm": "6.2.0"
	},
	"scripts": {
		"start": "gradlew :backend:endpoint:run",
		"updateFromCineworld": "npm run updateFromCineworldCinemas && npm run updateFromCineworldFilms",
		"updateFromCineworldCinemas": "gradlew :backend:sync:run --args \"cinemas\"",
		"updateFromCineworldFilms": "gradlew :backend:sync:run --args \"films\"",
		"heroku-postbuild": "cd frontend && npm run build",
		"test": "(cd frontend && npm test && cd ..) && (cd test && npm test && cd ..)",
		"install": "(cd frontend && npm install && cd ..) && (cd test && npm install && cd ..)",
		"update": "(cd frontend && npm update && cd ..) && (cd test && npm update && cd ..)",
		"devTest": "npm-run-all --race --parallel devTest:*",
		"devTest:selenium": "(cd test && npm run selenium && cd..)",
		"devTest:frontend": "(cd frontend && npm start && cd ..)",
		"devTest:backend": "gradlew :backend:endpoint:run --args \"../../deploy/static ../../test/fake-data\""
	},
	"devDependencies": {
		"npm-run-all": "4.1.1"
	}
}
