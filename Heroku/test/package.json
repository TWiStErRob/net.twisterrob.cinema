{
	"name": "twisterrob-cinema-web-tests",
	"description": "AngularJS end-to-end tests for twisterrob-cinema",
	"license": "UNLICENCED",
	"repository": "local",
	"scripts": {
		"postinstall": "npm-run-all --serial selenium:update blocking-proxy-hack",
		"postupdate": "npm-run-all --serial blocking-proxy-hack",
		"start": "npm-run-all --race --parallel selenium protractor",
		"selenium": "webdriver-manager start",
		"selenium:update": "webdriver-manager update",
		"protractor": "protractor protractor.config.js",
		"inspect": "protractor --directConnect --elementExplorer protractor.config.js",
		"blocking-proxy-hack": "rimraf node_modules/protractor/node_modules/blocking-proxy",
		"test": "npm run test:jshint",
		"test:jshint": "jshint --verbose --show-non-errors src"
	},
	"dependencies": {
		"blocking-proxy": "^1.0.1",
		"jasmine-expect": "3.7.1",
		"jasmine-expect-moment": "0.1.1",
		"lodash": "^4.17.4",
		"moment": "^2.19.1",
		"protractor": "5.2.0",
		"protractor-helpers": "^1.1.0",
		"protractor-browser-logs": "1.0.351",
		"selenium-webdriver": "^3.6.0"
	},
	"devDependencies": {
		"@types/jasminewd2": "2.0.3",
		"babel-core": "^5.8.38",
		"jasmine-spec-reporter": "4.2.1",
		"npm-run-all": "4.1.1",
		"protractor-screenshoter-plugin": "0.3.2",
		"rimraf": "2.6.2",

		"jshint": "2.9.5"
	}
}
