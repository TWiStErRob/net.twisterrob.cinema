{
	"name": "twisterrob-cinema-web-tests",
	"description": "AngularJS end-to-end tests for twisterrob-cinema",
	"license": "UNLICENCED",
	"repository": "local",
	"scripts": {
		"preinstall": "echo Installing Test dependencies",
		"postinstall": "echo Working around bin conflict https://github.com/npm/cli/issues/6152 && sed -r -f webdriver-manager.patch.sed -i node_modules/.bin/webdriver-manager* && echo Installing Selenium && npm run selenium:update && echo Hacking Backend dependencies && sed -r -f bpRunner.js.patch.sed -i node_modules/protractor/built/bpRunner.js && echo Installed Test dependencies",
		"postupdate": "npm-run-all --serial selenium:update",
		"start": "npm-run-all --race --parallel selenium protractor",
		"selenium": "webdriver-manager --versions.standalone 3.141.59 --gecko false --versions.chrome 111.0.5563.64 start",
		"selenium:update": "webdriver-manager --versions.standalone 3.141.59 --gecko false --versions.chrome 111.0.5563.64 update",
		"protractor": "protractor protractor.config.js",
		"inspect": "protractor --directConnect --elementExplorer protractor.config.js",
		"test": "npm run test:jshint",
		"test:jshint": "jshint --verbose --show-non-errors src"
	},
	"dependencies": {
		"jasmine-expect": "5.0.0",
		"jasmine-expect-moment": "0.1.1",
		"lodash": "4.17.21",
		"moment": "2.29.4",
		"protractor": "7.0.0",
		"protractor-helpers": "1.1.813",
		"protractor-browser-logs": "1.0.456",
		"selenium-webdriver": "4.9.2"
	},
	"devDependencies": {
		"@types/jasminewd2": "2.0.10",
		"babel-core": "6.26.3",
		"babel-preset-es2015": "6.24.1",
		"jasmine-spec-reporter": "7.0.0",
		"npm-run-all": "4.1.5",
		"protractor-screenshoter-plugin": "0.10.3",
		"webdriver-manager": "13.0.2",
		"jshint": "2.13.6"
	}
}
